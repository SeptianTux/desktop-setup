# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        bindsym Shift+j resize shrink width 30 px or 30 ppt
        bindsym Shift+k resize grow height 30 px or 30 ppt
        bindsym Shift+l resize shrink height 30 px or 30 ppt
        bindsym Shift+semicolon resize grow width 30 px or 30 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Shift+Left resize shrink width 30 px or 30 ppt
        bindsym Shift+Down resize grow height 30 px or 30 ppt
        bindsym Shift+Up resize shrink height 30 px or 30 ppt
        bindsym Shift+Right resize grow width 30 px or 30 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

# Custom window move
set $mode_move Move : (Ctrl or Shift) Left(left), Down(down), Right(right), Up(up), j(left), k(down), l(up), semicolon(right)
mode "$mode_move" {
    bindsym Left exec --no-startup-id "i3-msg 'move left, move left, move left, move left, move left'"
    bindsym Down exec --no-startup-id "i3-msg 'move down, move down, move down, move down, move down'"
    bindsym Up exec --no-startup-id "i3-msg 'move up, move up, move up, move up, move up'"
    bindsym Right exec --no-startup-id "i3-msg 'move right, move right, move right, move right, move right'"

    bindsym Shift+Left exec --no-startup-id "i3-msg 'move left, move left, move left, move left, move left, move left, move left, move left, move left, move left'"
    bindsym Shift+Down exec --no-startup-id "i3-msg 'move down, move down, move down, move down, move down, move down, move down, move down, move down, move down'"
    bindsym Shift+Up exec --no-startup-id "i3-msg 'move up, move up, move up, move up, move up, move up, move up, move up, move up, move up'"
    bindsym Shift+Right exec --no-startup-id "i3-msg 'move right, move right, move right, move right, move right, move right, move right, move right, move right, move right'"

    bindsym j exec --no-startup-id "i3-msg 'move left, move left, move left, move left, move left'"
    bindsym k exec --no-startup-id "i3-msg 'move down, move down, move down, move down, move down'"
    bindsym l exec --no-startup-id "i3-msg 'move up, move up, move up, move up, move up'"
    bindsym semicolon exec --no-startup-id "i3-msg 'move right, move right, move right, move right, move right'"

    bindsym Shift+j exec --no-startup-id "i3-msg 'move left, move left, move left, move left, move left, move left, move left, move left, move left, move left'"
    bindsym Shift+k exec --no-startup-id "i3-msg 'move down, move down, move down, move down, move down, move down, move down, move down, move down, move down'"
    bindsym Shift+l exec --no-startup-id "i3-msg 'move up, move up, move up, move up, move up, move up, move up, move up, move up, move up'"
    bindsym Shift+semicolon exec --no-startup-id "i3-msg 'move right, move right, move right, move right, move right, move right, move right, move right, move right, move right'"

	bindsym Ctrl+Left move left
	bindsym Ctrl+Down move down
	bindsym Ctrl+Up move up
	bindsym Ctrl+Right move right

	bindsym Ctrl+j move left
	bindsym Ctrl+k move down
	bindsym Ctrl+l move up
	bindsym Ctrl+semicolon move right

    bindsym Escape mode "default"
    bindsym Return mode "default"
}
bindsym $mod+m mode "$mode_move"

# Gaps
set $mode_gaps Gaps: (o)uter, (i)nner, (h)orizontal, (v)ertical, (t)op, (r)ight, (b)ottom, (l)eft
set $mode_gaps_outer Outer Gaps: +|-|0 (local), Shift + +|-|0 (global)
set $mode_gaps_inner Inner Gaps: +|-|0 (local), Shift + +|-|0 (global)
set $mode_gaps_horiz Horizontal Gaps: +|-|0 (local), Shift + +|-|0 (global)
set $mode_gaps_verti Vertical Gaps: +|-|0 (local), Shift + +|-|0 (global)
set $mode_gaps_top Top Gaps: +|-|0 (local), Shift + +|-|0 (global)
set $mode_gaps_right Right Gaps: +|-|0 (local), Shift + +|-|0 (global)
set $mode_gaps_bottom Bottom Gaps: +|-|0 (local), Shift + +|-|0 (global)
set $mode_gaps_left Left Gaps: +|-|0 (local), Shift + +|-|0 (global)
bindsym $mod+Shift+g mode "$mode_gaps"
mode "$mode_gaps" {
        bindsym o      mode "$mode_gaps_outer"
        bindsym i      mode "$mode_gaps_inner"
        bindsym h      mode "$mode_gaps_horiz"
        bindsym v      mode "$mode_gaps_verti"
        bindsym t      mode "$mode_gaps_top"
        bindsym r      mode "$mode_gaps_right"
        bindsym b      mode "$mode_gaps_bottom"
        bindsym l      mode "$mode_gaps_left"
        bindsym Return mode "$mode_gaps"
        bindsym Escape mode "default"
}
mode "$mode_gaps_outer" {
        bindsym plus  gaps outer current plus 5
        bindsym minus gaps outer current minus 5
        bindsym 0     gaps outer current set 0

        bindsym Shift+plus  gaps outer all plus 5
        bindsym Shift+minus gaps outer all minus 5
        bindsym Shift+0     gaps outer all set 0

        bindsym Return mode "$mode_gaps"
        bindsym Escape mode "default"
}
mode "$mode_gaps_inner" {
        bindsym plus  gaps inner current plus 5
        bindsym minus gaps inner current minus 5
        bindsym 0     gaps inner current set 0

        bindsym Shift+plus  gaps inner all plus 5
        bindsym Shift+minus gaps inner all minus 5
        bindsym Shift+0     gaps inner all set 0

        bindsym Return mode "$mode_gaps"
        bindsym Escape mode "default"
}
